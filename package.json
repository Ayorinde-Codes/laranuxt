{
  "name": "laranuxt",
  "version": "1.0.0",
  "description": "laravel+nuxt boilerplate",
  "author": "kevin olson <acidjazz@gmail.com>",
  "private": true,
  "scripts": {
    "api": "php artisan serve",
    "dump": "php artisan dump-server",
    "dev": "nuxt config/",
    "build": "nuxt build config/",
    "start": "nuxt start config/",
    "generate": "nuxt generate config/",
    "lint": "eslint --ext .js,.vue --ignore-path .gitignore .",
    "precommit": "npm run lint",
    "bulma": "node-sass --output-style compressed resources/assets/sass/bulma.sass > resources/static/bulma.css",
    "mdi": "cp node_modules/@mdi/font/css/materialdesignicons.min.css resources/static/mdi.css; cp node_modules/@mdi/font/fonts/* resources/static/fonts/.; cp node_modules/@mdi/font/css/materialdesignicons.min.css.map resources/static/.;",
    "pm2start": "HOST=0.0.0.0 pm2 start yarn.js -- start --name \"web\"",
    "pm2restart": "pm2 restart all",
    "staging-env": "aws s3 cp s3://mahalo-vault/envs/staging .env",
    "staging-new": "git pull; yarn;yarn static; yarn staging-env; yarn build; yarn pm2start; composer staging",
    "staging": "git pull;yarn mdi; yarn bulma; yarn staging-env; yarn; yarn build; yarn pm2restart; composer staging"
  },
  "devDependencies": {
    "autoprefixer": "^9.4.3",
    "babel-eslint": "^10.0.1",
    "eslint": "^5.10.0",
    "eslint-loader": "^2.1.1",
    "eslint-plugin-vue": "^5.0.0",
    "pug": "^2.0.3",
    "pug-plain-loader": "^1.0.0"
  },
  "dependencies": {
    "@mdi/font": "^3.2.89",
    "@nuxtjs/axios": "^5.3.6",
    "@nuxtjs/proxy": "^1.3.1",
    "bulma": "^0.7.2",
    "cross-env": "^5.2.0",
    "dotenv": "^7.0.0",
    "node-sass": "^4.11.0",
    "nuxt": "^2.6.0",
    "nuxt-purgecss": "^0.2.0",
    "stylus": "acidjazz/stylus#dev",
    "stylus-loader": "^3.0.2",
    "tailwindcss": "^0.7.3"
  }
}
